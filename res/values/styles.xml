<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CardListActivity">
        <item name="android:padding">10dp</item>
    </style>
    <style name="CardListItem">
        <item name="android:padding">5dp</item>
    </style>
    <style name="CardListTitle">
        <item name="android:textSize">30sp</item>
    </style>
    <style name="CardName">
        <item name="android:textSize">25sp</item>
    </style>
    <style name="CardInfo">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="CardValue" parent="@style/CardInfo">
        <item name="android:gravity">right</item>
    </style>
    <style name="CardPlus" parent="@style/CardValue">
        <item name="android:textColor">#00AF00</item>
    </style>
    <style name="CardMinus" parent="@style/CardValue">
        <item name="android:textColor">#bf0000</item>
    </style>
    <style name="CardAvailableText" parent="@style/CardInfo">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CardAvailableNumber" parent="@style/CardAvailableText">
        <item name="android:textColor">#00AF00</item>        
        <item name="android:gravity">right</item>
    </style>
</resources>